<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Hello app"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtPlant"
        android:layout_width="206dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/bg_edit"
        android:ems="10"
        android:hint="Task"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="@+id/txtPlant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtPlant" />

    <Button
        android:id="@+id/btnMFi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1027FA"
        android:text="change"
        app:layout_constraintStart_toStartOf="@+id/txtPlant"
        app:layout_constraintTop_toBottomOf="@+id/txtPlant" />

    <Button
        android:id="@+id/btnMUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#30F10F"
        android:text="update"
        app:layout_constraintBottom_toBottomOf="@+id/btnMFi"
        app:layout_constraintEnd_toStartOf="@+id/btnMDe"
        app:layout_constraintStart_toEndOf="@+id/btnMFi"
        app:layout_constraintTop_toTopOf="@+id/btnMFi"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnMDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D7FF0936"
        android:text="delete"
        app:layout_constraintBottom_toBottomOf="@+id/btnMUpdate"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/btnMUpdate" />

    <ListView
        android:id="@+id/listView"
        android:listSelector="@color/purple_200"
        android:layout_width="410dp"
        android:layout_height="413dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMFi" />
</androidx.constraintlayout.widget.ConstraintLayout>